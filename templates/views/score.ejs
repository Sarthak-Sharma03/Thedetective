<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link charset="utf-8" href="css/score.css" media="screen" rel="stylesheet" title="no title">
    <link rel="shortcut icon" href="images/favicon.ico" type="image/ico">
    <title>Results</title>
</head>
<body>
    <h1 class="main-heading">Enter your Score</h1>

    <h3 class="score-para">Enter total items you found</h3>
    
    <form action="/score" method="POST" onsubmit="return displayMessage()">
        <label class="name-label">Name : </label>
        <input class="name-input" type="text" name="name" required="required">
        <label class="score-label">Items : </label>
        <input class="score-input" type="number" name="score" id="score-input" required="required">
        <button type="submit" class="link-class submit-button" style="--clr:#01fe87">Submit</button>
    </form>

    <a class="link-class result-button" style="--clr:#01fe87" href="/result"><span>Check Results</span></a>

    <script>
        function displayMessage() {
            const scoreInput = document.getElementById("score-input");
            let message = "";

            if (scoreInput.value >= 0 && scoreInput.value <= 10) {
  message = "Your Soft Skills:\n" +
    "Perseverance: 30%\n" +
    "Problem Solving: 20%\n" +
    "Time Management: 15%\n" +
    "Leadership: 10%";
} else if (scoreInput.value >= 11 && scoreInput.value <= 13) {
  message = "Your Soft Skills:\n" +
    "Perseverance: 40%\n" +
    "Problem Solving: 30%\n" +
    "Time Management: 25%\n" +
    "Leadership: 20%";
} else if (scoreInput.value >= 14 && scoreInput.value <= 16) {
  message = "Your Soft Skills:\n" +
    "Perseverance: 50%\n" +
    "Problem Solving: 40%\n" +
    "Time Management: 35%\n" +
    "Leadership: 30%";
} else if (scoreInput.value >= 17 && scoreInput.value <= 20) {
  message = "Your Soft Skills:\n" +
    "Perseverance: 60%\n" +
    "Problem Solving: 50%\n" +
    "Time Management: 45%\n" +
    "Leadership: 40%";
} else if (scoreInput.value >= 21 && scoreInput.value <= 23) {
  message = "Your Soft Skills:\n" +
    "Perseverance: 70%\n" +
    "Problem Solving: 60%\n" +
    "Time Management: 55%\n" +
    "Leadership: 50%";
} else if (scoreInput.value > 23) {
  message = "Invalid Number";
    
} 

            alert(message);
            return true;
        }
    </script>
</body>
</html>
